PASSWORD=changeme

# Prod: images from GHCR (defaults match this repo; override if you use a fork).
# BACKEND_IMAGE=ghcr.io/OWNER/REPO/backend:latest
# FRONTEND_IMAGE=ghcr.io/OWNER/REPO/frontend:latest

# Host port for the backend API (default 8000)
BACKEND_PORT=8000
# Port the app is served on (frontend; default 80)
APP_PORT=80

# App name shown in header (frontend)
VITE_APP_NAME=Meme Archive

# Maximum storage allowed for meme images in megabytes (backend)
MAX_STORAGE_MB=5120

# Dev: docker-compose.dev.yml sets these to the local db service.
# Prod: set these to your central MySQL server (must be on mysql-network).
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=
MYSQL_DATABASE=meme_archive
